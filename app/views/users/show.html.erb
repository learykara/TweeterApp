<h2><%= @user.handle %></h2>
<h2><%= @user.fullname %></h2>
<p><%= @user.location %></p>
<p><%= @user.bio %></p>
<p><%= @user.url %></p>

<% if current_user.following?(@user) %>
	<%= render "unfollow" %>
<% else %>
	<%= render "follow" %>
<% end %>

<h3>recent tweets</h3>
<p><%= @user.posts.count %> tweets total</p>

<% @posts.each do |post| %>
	<p>
		<%= post.content %>
		 | created on: <%= post.created_at.strftime("%d/%m/%Y") %>
	</p>
<% end %>